{
    "id": "io.github.Pucas01.FunkinFlatpak",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "24.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "Funkin",
    "modules": [
        {
            "name": "ffmpeg",
            "config-opts": [
                "--enable-pic",
                "--enable-shared",
                "--disable-doc",
                "--disable-static",
                "--enable-gpl",
                "--enable-libvpx",
                "--enable-libmp3lame",
                "--enable-libvorbis",
                "--enable-libopus"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://ffmpeg.org/releases/ffmpeg-4.4.5.tar.xz",
                    "sha256": "f9514e0d3515aee5a271283df71636e1d1ff7274b15853bcd84e144be416ab07"
                }
            ]
        },
        {
            "name": "libvlc",
            "config-opts": [
                "BUILDCC=gcc",
                "--disable-lua",
                "--disable-a52",
                "--disable-qt",
                "--disable-ncurses",
                "--disable-udev"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://get.videolan.org/vlc/3.0.21/vlc-3.0.21.tar.xz",
                    "sha256": "24dbbe1d7dfaeea0994d5def0bbde200177347136dbfe573f5b6a4cee25afbb0",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 6504,
                        "stable-only": true,
                        "url-template": "https://get.videolan.org/vlc/$version/vlc-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "zenity-wrapper",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm755 zenity.sh /app/bin/zenity"
            ],
            "sources": [
                {
                    "type": "script",
                    "dest-filename": "zenity.sh",
                    "commands": [
                        "#!/usr/bin/env bash",
                        "new_args=()",
                        "for arg in \"$@\"; do",
                        "    if [[ \"$arg\" == --file-filter=* ]]; then",
                        "        prefix=\"--file-filter=\"",
                        "        value=\"${arg#$prefix}\"",
                        "        value_no_spaces=\"${value// /}\"",
                        "        new_args+=(\"${prefix}${value_no_spaces}\")",
                        "    else",
                        "        new_args+=(\"$arg\")",
                        "    fi",
                        "done",
                        "exec /usr/bin/zenity \"${new_args[@]}\""
                    ]
                }
            ]
        },
        {
            "name": "funkin",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p ${FLATPAK_DEST}/bin",
                "mkdir -p ${FLATPAK_DEST}/bin/mods",
                "mkdir -p ${FLATPAK_DEST}/share/applications",
                "mkdir -p ${FLATPAK_DEST}/share/icons/hicolor/256x256/apps",
                "mkdir -p ${FLATPAK_DEST}/share/metainfo",
                "mkdir -p ${FLATPAK_DEST}/lib",
                "install -Dm755 Funkin/Funkin ${FLATPAK_DEST}/bin/Funkin.bin", 
                "install -Dm755 funkin-wrapper.sh ${FLATPAK_DEST}/bin/Funkin",
                "cp -r Funkin/assets Funkin/manifest ${FLATPAK_DEST}/bin",
                "cp -r Funkin/*.md Funkin/*.txt Funkin/*.ndll ${FLATPAK_DEST}/bin/",
                "cp -r lib ${FLATPAK_DEST}",
                "cp io.github.Pucas01.FunkinFlatpak.desktop ${FLATPAK_DEST}/share/applications/",
                "cp io.github.Pucas01.FunkinFlatpak.png ${FLATPAK_DEST}/share/icons/hicolor/256x256/apps/",
                "cp io.github.Pucas01.FunkinFlatpak.appdata.xml ${FLATPAK_DEST}/share/metainfo"
            ],
            "sources": [
                {
                    "type": "script",
                    "dest-filename": "funkin-wrapper.sh",
                    "commands": [
                        "#!/usr/bin/env bash",
                        "# Zenity Wayland Fix",
                        "export DISPLAY=:0",
                        "exec /app/bin/Funkin.bin \"$@\""
                    ]
                },
                {
                    "type": "dir",
                    "path": "FunkinSource"
                },
                                {
                    "type": "dir",
                    "path": "libraries"
                },
                {
                    "type": "file",
                    "path": "io.github.Pucas01.FunkinFlatpak.desktop"
                },
                {
                    "type": "file",
                    "path": "io.github.Pucas01.FunkinFlatpak.png"
                },
                {
                    "type": "file",
                    "path": "io.github.Pucas01.FunkinFlatpak.appdata.xml"
                }
            ]
        }
    ],
    "finish-args": [
        "--share=network",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--socket=pulseaudio",
        "--device=dri",
        "--share=ipc",
        "--env=LD_LIBRARY_PATH=/app/bin:/app/lib",
        "--env=LD_PRELOAD=/app/lib/libSDL2-2.0.so.0",
        "--persist=mods",
        "--filesystem=xdg-run/discord-ipc-0",
        "--filesystem=~/.var/app/io.github.Pucas01.FunkinFlatpak/mods:/app/bin/mods",
        "--env=DISPLAY=:0"
    ]
}